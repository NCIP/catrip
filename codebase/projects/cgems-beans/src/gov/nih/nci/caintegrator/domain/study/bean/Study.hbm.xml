<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	

<hibernate-mapping package="gov.nih.nci.caintegrator.domain.study.bean">
   <class name="Study" 
    	table="STUDY_DIM"
        lazy="true">
        

       <id name="id" 
           type="java.lang.String" 
           column="STUDY_NAME">
           <generator class="assigned" />
       </id>
       
       
        <!-- description -->        
       <property name="description" 
                 type="java.lang.String" 
                 column="STUDY_DESCRIPTION" 
                 insert="false" 
                 update="false" />
                 
       <!-- endDate -->                 
       <property name="endDate" 
                 type="java.util.Date" 
                 column="END_DATE" 
                 insert="false" 
                 update="false" />                 
     
                 
        <!-- name -->                 
       <property name="name"
                 type="java.lang.String"
                 column="STUDY_NAME"
                 insert="false"
                 update="false" />

	    <!-- sponsorStudyIdentifier -->                 
       <property name="sponsorStudyIdentifier" 
                 type="java.lang.String" 
                 column="STUDY_SPONSOR" 
                 insert="false" 
                 update="false" />
                 
        <!-- startDate-->                 
        <property name="startDate" 
                 type="java.util.Date" 
                 column="START_DATE" 
                 insert="false" 
                 update="false" />  
                 
      <!-- here is for m-m relationships -->        
   
      <set name="populationCollection" table="STUDY_STDPOPUPLATION_ASSO" lazy="true">
         <cache usage="read-write" />
         <key column="STUDY_NAME"  />
         <many-to-many class="gov.nih.nci.caintegrator.domain.study.bean.Population" column="POPULATION_ID" />
      </set>              
     
     
      <set name="snpPanelCollection" table="STUDY_PANEL_ASSO" lazy="true"> 
      <cache usage="read-write" />
      <key column="STUDY_NAME" />
      <many-to-many class="gov.nih.nci.caintegrator.domain.annotation.snp.bean.SNPPanel" column="SNP_PANEL_ID" />
     </set>  
     
    <!-- here is for 1-m relationships -->   
  
    
     <set name="studyParticipantCollection" lazy="true" inverse="true">
      <cache usage="read-write" />
      <key column="STUDY_NAME" />
      <one-to-many class="gov.nih.nci.caintegrator.domain.study.bean.StudyParticipant" />
     </set>  
    
     <set name="genoTypeFindingCollection" lazy="true" inverse="true">
      <cache usage="read-write" />
      <key column="STUDY_NAME" />
      <one-to-many class="gov.nih.nci.caintegrator.domain.finding.variation.germline.bean.GenotypeFinding" />
    </set>  
    
   
    
     <set name="associatedStudyCollection" lazy="true" inverse="true">
      <cache usage="read-write" />
      <key column="STUDY_NAME" />
      <one-to-many class="gov.nih.nci.caintegrator.domain.study.bean.Study" />
    </set> 
    
     <!--  m-1 relationship -->
    
  <!-- TODO: Fix this Ram

   <many-to-one name="study" class="gov.nih.nci.caintegrator.domain.study.Study" column="STUDY_NAME"
           insert="" />
  -->

      
	</class>
</hibernate-mapping>