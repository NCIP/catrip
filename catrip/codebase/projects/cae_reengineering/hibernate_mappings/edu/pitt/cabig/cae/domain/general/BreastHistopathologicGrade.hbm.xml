<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.pitt.cabig.cae.domain.general.HistopathologicGrade"
        table="BREAST_HISTOPATHOLOGIC_GRADES"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-HistopathologicGrade.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

    	<discriminator>
      		<column name="DISCRIMINATOR"/>
    	</discriminator>
    	
	<subclass name="edu.pitt.cabig.cae.domain.breast.NottinghamHistopathologicGrade " discriminator-value="NHGR">
	                <property
		            name="tubuleFormation"
		            type="java.lang.Integer"
		            update="true"
		            insert="true"
		            column="TUBULE_FORMATION"
		        />
		
		        <property
		            name="nuclearPleomorphism"
		            type="java.lang.Integer"
		            update="true"
		            insert="true"
		            column="NUCLEAR_PLEOMORPHISM"
		        />
		
		        <property
		            name="mitoticCount"
		            type="java.lang.Integer"
		            update="true"
		            insert="true"
		            column="MITOTIC_COUNT_N"
		        />
		
		        <property
		            name="totalScore"
		            type="java.lang.Integer"
		            update="true"
		            insert="true"
		            column="TOTAL_SCORE"
		        />
		
		        <property
		            name="totalScoreMVR"
		            type="java.lang.String"
		            update="true"
		            insert="true"
		            column="TOTAL_SCORE_MVR"
        		/>
	        
	</subclass>

	<subclass name="edu.pitt.cabig.cae.domain.breast.OtherBreastCancerHistopathologicGrade " discriminator-value="OHGR">
	                       <property
		                   name="systemName"
		                   type="java.lang.String"
		                   update="true"
		                   insert="true"
		                   column="SYSTEM_NAME"
		               />
		       
		               <property
		                   name="score"
		                   type="java.lang.Integer"
		                   update="true"
		                   insert="true"
		                   column="SCORE"
		               />
		       
		               <property
		                   name="scoreMVR"
		                   type="java.lang.String"
		                   update="true"
		                   insert="true"
		                   column="SCORE_MVR"
		               />
		       
		               <property
		                   name="mitoticCount"
		                   type="java.lang.Integer"
		                   update="true"
		                   insert="true"
		                   column="MITOTIC_COUNT_O"
        			/>
	        
	</subclass>	
	
        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-HistopathologicGrade.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
