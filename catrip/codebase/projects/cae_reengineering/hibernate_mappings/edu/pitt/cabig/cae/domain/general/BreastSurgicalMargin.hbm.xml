<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="edu.pitt.cabig.cae.domain.general.SurgicalMargin"
        table="BREAST_SURGICAL_MARGINS"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SurgicalMargin.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

    	<discriminator>
      		<column name="DISCRIMINATOR"/>
    	</discriminator>
    	
        <property
            name="spatialRelationshipToPatient"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SPATIAL_RELATIONSHIP_TO_PATIENT"
        />

        <property
            name="otherSpatialRelationshipToPatient"
            type="java.lang.String"
            update="true"
            insert="true"
            column="OTHER_SPATIAL_RELATIONSHIP_TO_PATIENT"
        />

        <property
            name="MVR"
            type="java.lang.String"
            update="true"
            insert="true"
            column="MVR"
        />
	
	<subclass name="edu.pitt.cabig.cae.domain.breast.BreastPositiveSurgicalMargin " discriminator-value="BRPO">
	        <property
	            name="neoplasmPresent"
	            type="java.lang.String"
	            update="true"
	            insert="true"
	            column="NEOPLASM_PRESENT"
	        />
	
	        <property
	            name="extentInvolvement"
	            type="java.lang.String"
	            update="true"
	            insert="true"
	            column="EXTENT_INVOLVEMENT"
	        />
	
	        <property
	            name="otherExtentInvolvement"
	            type="java.lang.String"
	            update="true"
	            insert="true"
	            column="OTHER_EXTENT_INVOLVEMENT"
	        />	
	        
	</subclass>

	<subclass name="edu.pitt.cabig.cae.domain.breast.BreastNegetiveSurgicalMargin " discriminator-value="BRNE">
	        <property
	            name="closestNeoplasmPresent"
	            type="java.lang.String"
	            update="true"
	            insert="true"
	            column="CLOSEST_NEOPLASM_PRESENT"
	        />
	
	        <property
	            name="distanceToClosestNeoplasm"
	            type="float"
	            update="true"
	            insert="true"
	            column="DISTANCE_TO_CLOSEST_NEOPLASM"
	        />
	</subclass>
	
        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SurgicalMargin.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
