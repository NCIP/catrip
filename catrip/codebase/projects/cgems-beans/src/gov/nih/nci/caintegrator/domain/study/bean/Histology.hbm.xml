<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	

<hibernate-mapping package="gov.nih.nci.caintegrator.domain.study.bean">
   <class name="Histology" 
    	table="HISTOLOGY"
        lazy="true">
        
       <!-- id -->
       <id name="id" 
           type="java.lang.Integer" 
           column="HISTOLOGY_ID">
           <generator class="assigned" />
       </id>
       
       <!-- invasivePresentation -->
         <property name="invasivePresentation"
                   type="java.lang.String"
                   column="INVASIVE_PRESENTATION"
                   insert="false"
                   update="false" />

        <!-- comment -->        
       <property name="comment" 
                 type="java.lang.String" 
                 column="COMMENT" 
                 insert="false" 
                 update="false" />
                 
       <!-- diagnosisName -->                 
       <property name="diagnosisName" 
                 type="java.lang.String" 
                 column="DIAGNOSIS_NAME" 
                 insert="false" 
                 update="false" />                 
     
                 
        <!-- grade -->                 
       <property name="grade" 
                 type="java.lang.String" 
                 column="GRADE" 
                 insert="false" 
                 update="false" />
	    
	    <!-- stage -->                 
       <property name="stage" 
                 type="java.lang.String" 
                 column="STAGE" 
                 insert="false" 
                 update="false" />
                 
        <!-- type -->                 
        <property name="type" 
                 type="java.lang.String" 
                 column="TYPE" 
                 insert="false" 
                 update="false" />                
     
     
         
