<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="edu.duke.cabig.tumorregistry.domain">
	<class name="Activity" table="ACTIVITY">
		
		<id
			name="Id"
			type="long"
			column="ID"
		>
			
		</id>
		<discriminator>
	      <column name="DISCRIMINATOR"/>
	    </discriminator>

		<property
			name="Course"
			column="COURSE"
			type="integer"
			not-null="false"
			length="8"
		/>
		<property
			name="AtLocalFacility"
			column="AT_LOCAL_FACILITY"
			type="boolean"
			not-null="false"
			length="8"
		/>
		<property
			name="StartDate"
			column="START_DATE"
			type="date"
			not-null="false"
			length="7"
		/>
		<property
			name="Characterization"
			column="CHARACTERIZATION"
			type="string"
			not-null="false"
			length="50"
		/>
		<subclass name="SubstanceAdministration" discriminator-value="SubstanceAdministration">
			<property
				name="StopDate"
				column="STOP_DATE"
				type="date"
				not-null="false"
				length="7"
			/>
			<subclass name="Hormone" discriminator-value="hormone"/>
			<subclass name="Immunotherapy" discriminator-value="Immunotherapy"/>
			<subclass name="OtherTherapy" discriminator-value="OtherTherapy"/>
			<subclass name="Chemotherapy" discriminator-value="Chemotherapy"/>
		</subclass>
		<subclass name="Surgery" discriminator-value="Surgery">
			<!-- place holder for future attributes for Surgery -->
			<subclass name="RegionalDistantSurgery" discriminator-value="RegionalDistantSurgery"/>
			<subclass name="NonCancerDirectedSurgery" discriminator-value="NonCancerDirectedSurgery"/>
			<subclass name="PrimarySiteSurgery" discriminator-value="PrimarySiteSurgery"/>
			<subclass name="RegionalLymphNodeSurgery" discriminator-value="RegionalLymphNodeSurgery"/>
		</subclass>
		<subclass name="Procedure" discriminator-value="Procedure">
			<!-- place holder for future attributes for Procedure -->
			<subclass name="OtherProcedure" discriminator-value="otherprocedure"/>
			<subclass name="HemTransplantEndocrine" discriminator-value="HemTransplantEndocrine"/>
			<subclass name="Radiation" discriminator-value="radiation">
			
				<property
					name="StopDate"
					column="STOP_DATE"
					type="date"
					not-null="false"
					length="7"
				/>
				<property
					name="NumberOfTreatments"
					column="NUMBER_OF_TREATMENTS"
					type="string"
					not-null="false"
					length="50"
				/>
				<property
					name="Location"
					column="LOCATION"
					type="string"
					not-null="false"
					length="50"
				/>
				<property
					name="Volume"
					column="VOLUME"
					type="string"
					not-null="false"
					length="50"
				/>
				<property
					name="RegionalDose"
					column="REGIONAL_DOSE"
					type="integer"
					not-null="false"
				/>
				<property
					name="BoostDose"
					column="BOOST_DOSE"
					type="integer"
					not-null="false"
				/>
				<property
					name="BoostModality"
					column="BOOST_MODALITY"
					type="string"
					not-null="false"
					length="50"
				/>
				<property
					name="RegionalModality"
					column="REGIONAL_MODALITY"
					type="string"
					not-null="false"
					length="50"
				/>
		</subclass>
	</subclass>

	</class>	
</hibernate-mapping>