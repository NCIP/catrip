				<exclude name="**/*Request.java"/>
				<exclude name="**/*Response.java"/>
				<exclude name="**/DataService.types/*"/>
			</fileset>
			<fileset dir="${cae.src.dir}" defaultexcludes="yes">
				<include name="**/*.java"/>
			</fileset>

			<!-- ============================= -->
